<div class="container w-75">
  <% if(errorMessage) { %>
  <div class="alert alert-danger" role="alert">
    <% errorMessage.forEach((error) => { %>
    <li><%= error.msg %></li>
    <%}) %>
  </div>
  <% } %>

  <h1 class="mt-5 mb-4 header">Add New Job</h1>

  <form action="/addJob" method="post">
    <select
      class="form-select mb-3"
      id="jobCategory"
      name="jobCategory"
      aria-label="Default select example"
    >
      <% jobCategories.forEach((category) => { %>
      <option value="<%= category %>"><%= category %></option>
      <% }) %>
    </select>

    <select
      id="jobDesignation"
      name="jobDesignation"
      class="form-select mb-3"
      aria-label="Default select example"
    >
      <option selected>Select job designation</option>
      <% jobDesignations.forEach((designationOptions) => { %>
      <option value="<%= designationOptions %>">
        <%= designationOptions %>
      </option>
      <% }) %>
    </select>

    <div class="mb-3">
      <label for="jobLocation" class="form-label">Enter job location</label>
      <input
        type="text"
        class="form-control"
        id="jobLocation"
        name="jobLocation"
        required
      />
    </div>
    <div class="mb-3">
      <label for="companyName" class="form-label">Company Name</label>
      <input
        class="form-control"
        id="companyName"
        name="companyName"
        required
      />
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-text" id="salary">Enter salary</span>
          <input
            type="number"
            class="form-control"
            id="salary"
            name="salary"
            step="0.01"
          />
        </div>
      </div>

      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-text" id="numberOfOpenings"
            >Total Positions</span
          >
          <input
            type="number"
            class="form-control"
            id="numberOfOpenings"
            name="numberOfOpenings"
            step="0.01"
            required
          />
        </div>
      </div>
    </div>

    <div class="mb-3">
      <div>
        <label for="skills" class="form-label">Job Skills Required</label>
      </div>
      <% jobSkills.forEach((skill)=> { %>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="skills"
          id="skill_<%= skill %>"
          value="<%= skill %>"
        />
        <label class="form-check-label" for="skill_<%= skill %>">
          <%= skill %>
        </label>
      </div>
      <% }) %>
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="applyBy">Apply By</span>
      <input
        type="date"
        class="form-control"
        id="applyBy"
        name="applyBy"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
